<header>
    <!-- Logo Section -->
    <div class="logo">
        <img src="/logo.png" alt="Souranjh Technology Logo" />
    </div>

    .header-container {
        display: flex; /* Use flexbox to align items */
        justify-content: space-between; /* Space out items */
        align-items: center; /* Center items vertically */
        padding: 10px 20px; /* Padding around the header */
        background-color: #f4f4f4; /* Background color */
        border-bottom: 2px solid #ddd; /* Bottom border */
    }
    
    /* Logo Styling */
    .logo img {
        width: 120px; /* Logo width */
        height: auto; /* Maintain aspect ratio */
    }
    
    /* Navigation Links Styling */
    .nav-links {
        display: flex; /* Use flexbox for navigation items */
    }
    
    .nav-links a {
        margin: 0 15px; /* Space between links */
        text-decoration: none; /* Remove underline */
        color: #333; /* Link color */
        font-size: 18px; /* Font size */
    }
    
    /* Search Bar Styling */
    .search-bar {
        display: flex; /* Use flexbox for search bar */
        align-items: center; /* Center search bar items vertically */
    }
    
    .search-bar input[type="text"] {
        padding: 7px; /* Input padding */
        border: 1px solid #ddd; /* Border */
        border-radius: 5px; /* Rounded corners */
    }
    
    .search-bar button {
        padding: 7px 15px; /* Button padding */
        margin-left: 5px; /* Space between input and button */
        background-color: #333; /* Button background */
        color: #fff; /* Button text color */
        border: none; /* No border */
        cursor: pointer; /* Pointer cursor */
    }
    
    .search-bar button:hover {
        background-color: #555; /* Darker background on hover */
    }
    
    
    
    /* Carousel Styles */
    /* Carousel Section Styling */
    .carousel {
        height: 50vh; /* 50% of the viewport height */
        overflow: hidden; /* Hide any overflow */
        background-color: #f2f2f2;
    }
    
    .carousel-item img {
        height: 100%; /* Fill the carousel height */
        object-fit: cover; /* Maintain aspect ratio */
        width: 100%; /* Full width of the carousel */
    }
    
    /* Optional: Make sure carousel indicators are visible */
    .carousel-indicators {
        bottom: 10px; /* Position indicators */
    }
